<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Watcher" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="RegularHoursView">
        <attr name="android:text" format="string"/>
        <attr name="maxValue" format="integer"/>
        <attr name="turningTheSecondHand" format="integer"/>
        <attr name="turningTheMinuteHand" format="integer"/>
        <attr name="clockwiseRotation" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="timeInterval" format="integer"/>
    </declare-styleable>

</resources>